<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="InjuryBase">
		<defName>ZombieBite</defName>
		<hediffClass>Zombieland.Hediff_Injury_ZombieBite</hediffClass>
		<label>zombie bite</label>
		<description>A infectious bite of a zombie.</description>
		<displayWound>true</displayWound>
		<isBad>true</isBad>
		<comps>
			<li Class="ZombieLand.HediffCompProperties_Zombie_TendDuration">
				<labelTendedWell>bandaged</labelTendedWell>
				<labelTendedWellInner>sutured</labelTendedWellInner>
				<labelSolidTendedWell>set</labelSolidTendedWell>
			</li>
			<li Class="ZombieLand.HediffCompProperties_Zombie_Infecter">
				<minBedTendQualityToAvoidInfection>0.17</minBedTendQualityToAvoidInfection>
				<minBedQualityToAvoidInfection>Masterwork</minBedQualityToAvoidInfection>
				<minTendQualityToAvoidInfection>0.7</minTendQualityToAvoidInfection>
			</li>
		</comps>
		<injuryProps>
			<painPerSeverity>0.0125</painPerSeverity>
			<averagePainPerSeverityPermanent>0.00625</averagePainPerSeverityPermanent>
			<bleedRate>0.05</bleedRate>
			<canMerge>false</canMerge>
			<destroyedLabel>Bitten off by a zombie</destroyedLabel>
			<destroyedOutLabel>Bitten out by a zombie</destroyedOutLabel>
		</injuryProps>
	</HediffDef>

	<HediffDef ParentName="InfectionBase">
		<defName>ZombieInfection</defName>
		<label>zombie infection</label>
		<description>Zombie infection after death</description>
		<hediffClass>Zombieland.Hediff_ZombieInfection</hediffClass>
		<stages>
			<li>
				<painOffset>0</painOffset>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="DiseaseBase">
		<defName>Contamination</defName>
		<label>contamination</label>
		<labelNoun>contamination</labelNoun>
		<description>Zombie contamination in the brain and mind. Caused by touching and being exposed by contaminated things and places. This effect is terminal and does not wear off.</description>
		<descriptionShort>Zombie contamination in the brain and mind.</descriptionShort>
		<hediffClass>ZombieLand.Hediff_Contamination</hediffClass>
		<defaultLabelColor>(0,0.75,0)</defaultLabelColor>
		<isBad>false</isBad>
		<everCurableByItem>false</everCurableByItem>
		<keepOnBodyPartRestoration>True</keepOnBodyPartRestoration>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<label>none</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.1</minSeverity>
				<label>light</label>
				<socialFightChanceFactor>1.1</socialFightChanceFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.05</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.2</minSeverity>
				<label>noticable</label>
				<socialFightChanceFactor>1.5</socialFightChanceFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.15</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>0.15</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.4</minSeverity>
				<label>moderate</label>
				<socialFightChanceFactor>3</socialFightChanceFactor>
				<hungerRateFactorOffset>-0.1</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.15</offset>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>0.2</offset>
					</li>
				</capMods>
				<statFactors>
					<ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.25</ToxicEnvironmentResistance>
					<PsychicSensitivity>0</PsychicSensitivity>
				</statFactors>
			</li>
			<li>
				<minSeverity>0.75</minSeverity>
				<label>heavy</label>
				<socialFightChanceFactor>4</socialFightChanceFactor>
				<hungerRateFactorOffset>-0.35</hungerRateFactorOffset>
				<restFallFactorOffset>-0.25</restFallFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<offset>-0.35</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.25</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>0.25</offset>
					</li>
				</capMods>
				<statFactors>
					<ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.75</ToxicEnvironmentResistance>
				</statFactors>
				<statOffsets>
					<PsychicSensitivity>0.5</PsychicSensitivity>
					<PainShockThreshold>-0.5</PainShockThreshold>
				</statOffsets>
			</li>
			<li>
				<minSeverity>0.85</minSeverity>
				<label>extreme</label>
				<socialFightChanceFactor>6</socialFightChanceFactor>
				<hungerRateFactorOffset>-0.7</hungerRateFactorOffset>
				<restFallFactorOffset>-0.5</restFallFactorOffset>
				<vomitMtbDays>1.0</vomitMtbDays>
				<lifeThreatening>true</lifeThreatening>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.3</offset>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<offset>-0.5</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.3</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>0.5</offset>
					</li>
				</capMods>
				<statFactors>
					<ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.5</ToxicEnvironmentResistance>
				</statFactors>
				<statOffsets>
					<PsychicSensitivity>-0.75</PsychicSensitivity>
					<PainShockThreshold>-0.75</PainShockThreshold>
				</statOffsets>
			</li>
			<li>
				<minSeverity>0.95</minSeverity>
				<label>deadly</label>
				<socialFightChanceFactor>10</socialFightChanceFactor>
				<hungerRateFactorOffset>-1</hungerRateFactorOffset>
				<restFallFactorOffset>-1</restFallFactorOffset>
				<lifeThreatening>true</lifeThreatening>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.5</offset>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<offset>-0.75</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.5</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>0.75</offset>
					</li>
				</capMods>
				<statFactors>
					<ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">1</ToxicEnvironmentResistance>
				</statFactors>
				<statOffsets>
					<PsychicSensitivity>-1</PsychicSensitivity>
					<PainShockThreshold>-1</PainShockThreshold>
				</statOffsets>
			</li>
			<li>
				<minSeverity>0.9999</minSeverity>
				<label>deadly</label>
				<lifeThreatening>true</lifeThreatening>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-1</offset>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<offset>-1</offset>
					</li>
				</capMods>
				<deathMtbDays>0.0000000001</deathMtbDays>
				<totalBleedFactor>10000</totalBleedFactor>
			</li>
		</stages>
	</HediffDef>

</Defs>
